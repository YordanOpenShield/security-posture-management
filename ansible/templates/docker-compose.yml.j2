version: "3.8"
services:
  postgres:
    image: postgres:16-alpine
    environment:
      POSTGRES_USER: "{{ pg_user | default('faraday') }}"
      POSTGRES_PASSWORD: "{{ pg_password | default('faraday') }}"
      POSTGRES_DB: "{{ pg_db | default('faraday') }}"
    volumes:
      - pgdata:/var/lib/postgresql/data
    restart: unless-stopped

  redis:
    image: redis:6.2-alpine
    volumes:
      - redisdata:/data
    restart: unless-stopped

  faraday:
    image: faradaysec/faraday:latest
    depends_on:
      - postgres
      - redis
      - rabbitmq
    environment:
      - LISTEN_ADDR=0.0.0.0
      - PGSQL_HOST=postgres
      - PGSQL_USER={{ pg_user | default('faraday') }}
      - PGSQL_PASSWD={{ pg_password | default('faraday') }}
      - PGSQL_DBNAME={{ pg_db | default('faraday') }}
      - REDIS_SERVER=redis
    ports:
      - "5985:5985"
    volumes:
      - faradaydata:/home/faraday/.faraday
    restart: unless-stopped

  nginx:
    image: nginx:alpine
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
      - ./certs:/etc/nginx/certs:ro
    depends_on:
      - faraday
    restart: unless-stopped

volumes:
  pgdata:
  redisdata:
  opensearchdata: