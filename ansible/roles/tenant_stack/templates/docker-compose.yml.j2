version: "3.8"
services:
  postgres:
    image: postgres:16-alpine
    environment:
      POSTGRES_USER: "{{ pg_user | default('faraday') }}"
      POSTGRES_PASSWORD: "{{ pg_password | default('faraday') }}"
      POSTGRES_DB: "{{ pg_db | default('faraday') }}"
    volumes:
      - /srv/faraday/data/postgres:/var/lib/postgresql/data
    restart: unless-stopped

  redis:
    image: redis:6.2-alpine
    volumes:
      - /srv/faraday/data/redis:/data
    restart: unless-stopped

  rabbitmq:
    image: rabbitmq:3-management
    environment:
      RABBITMQ_DEFAULT_USER: "{{ rmq_user | default('faraday') }}"
      RABBITMQ_DEFAULT_PASS: "{{ rmq_password | default('changeme') }}"
    ports:
      - "15672:15672"
    restart: unless-stopped

  faraday:
    image: faradaysec/faraday:latest
    depends_on:
      - postgres
      - redis
      - rabbitmq
    ports:
      - "5985:5985"
    volumes:
      - /srv/faraday/data/faraday:/home/faraday/.faraday
    restart: unless-stopped

  nginx:
    image: nginx:alpine
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
      - ./certs:/etc/nginx/certs:ro
    depends_on:
      - faraday
    restart: unless-stopped